<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the border color and width -->
    <stroke
        android:width="4dp"
        android:color="@color/a1" /> <!-- Change to your desired color -->

    <!-- Define the corners (optional) -->
    <corners
        android:radius="8dp" /> <!-- Change to adjust the corner radius -->

    <!-- Define padding inside the border (optional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Define the background color inside the border (optional) -->
    <solid android:color="@color/a3" /> <!-- Set to your desired background color -->
</shape>
